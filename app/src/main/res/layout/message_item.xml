<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:padding="5dp"
        android:background="@drawable/rounded_border"
        >

        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <!-- Bill type -->
        <TextView
            android:id="@+id/chat_username"
            android:text="Emily Pascua"
            android:textSize="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>
        <!-- Amount due -->
        <TextView
            android:id="@+id/chat_message"
            android:text="You made a payment of $20.00 for foodt of $20.00 for foodt of $20.00 for foodt of $20.00 for foodt of $20.00 for food."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>
        <TextView
            android:id="@+id/chat_date"
            android:text="December 20, 2019"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>
        </LinearLayout>
        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/chat_usericon"
            app:civ_circle_background_color="@color/colorAccent"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/woman"
            android:layout_gravity="right"
            android:layout_margin="10dp"></de.hdodenhof.circleimageview.CircleImageView>
        <!-- Due date -->
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:padding="5dp"
        android:background="@drawable/rounded_border_dark"
        >
        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            app:civ_circle_background_color="@color/colorAccent"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/logo"
            android:layout_margin="10dp"></de.hdodenhof.circleimageview.CircleImageView>
        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <!-- Bill type -->
        <TextView
            android:text="Tanuki"
            android:textSize="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>
        <!-- Amount due -->
        <TextView
            android:id="@+id/tanuki_repsonse"
            android:text="Tanuki Message."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>
        <TextView
            android:id="@+id/tanuki_response_date"
            android:text="December 20, 2019"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>
        <!-- Due date -->
        </LinearLayout>
    </LinearLayout>
</LinearLayout>